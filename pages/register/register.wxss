/* pages/register/register.wxss */
page{
  display: block;  
  min-height: 100%;  
  background-color: white;  
}
.register-container{
  width:100%;
  margin:0 auto;
}
.input-row{
  display:flex;
  /* background-color:#eee; */
  padding:10px 15px;
  box-sizing:border-box;
  position: relative;
  font-size: 1.2em;
  border-bottom: 1rpx solid #eee;
}
.input-row>label{
  padding-top:4px;
  box-sizing: border-box;
  width:105px;
}
.input-row>input{
  width: 100%;
}
.input-vcode{
   padding-right:0 !important; 
   position: relative;
   margin-bottom: 10px;
}
.input-vcode>label{
  width:21%;
}
.input-vcode>input{
  width:70%;
}
.input-vcode>text{
  position: absolute;
  border-left:1rpx solid #e5e5e5;
  padding:0em 0.6em 0em 0.6em;
   height:50px;
  line-height: 50px; 
  color: #f5833b;
  top:0;
  right:0;
  box-sizing: border-box;
}
/* 服务条款 */
.fwtk-check>label{
  display:block;
  font-size:12px;
  margin-left:15px;
}
.fwtk-check>label>checkbox{
  zoom:0.5;
  color:#999999;
}
.fwtk-check>label>text{
  vertical-align:middle;
}
/* 注册按钮 */
.register-bottom{
  padding:1.2em;
}
.register-bottom>button{
  background:#f5833b;
  color:#fff;
}