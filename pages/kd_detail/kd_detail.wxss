  overflow: hidden;
}
.swiper-slide-active{
  overflow: auto !important;
}
.details-tab{
  margin-bottom: 55px;
  background:#fff;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #eee;  
    text-align: center;  
    line-height: 60rpx;
    }  
.swiper-tab-list{  
  font-size: 26rpx;  
     display: inline-block;  
    width: 25%;
     color: #919090; 
}  
.on{ color: #ff7f00;  
    border-bottom: 5rpx solid #ff7f00;
    }  
.swiper-container{
  height:100%;
  padding:10px 10px;  
  box-sizing: border-box;
}
.swiper-box{ 
  display: block; 
  height: auto; 
  width: 100%; 
  overflow: hidden; 
  }  
